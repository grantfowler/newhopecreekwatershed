  <!-- About the Watershed -->
  <section class="py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4">
      <h2 class="font-serif text-3xl text-earth text-center mb-8">About the Watershed</h2>
      <div class="prose prose-lg mx-auto text-earth/80">
