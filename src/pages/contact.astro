---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact" description="Get in touch with New Hope Creek Watershed.">
  <div class="max-w-2xl mx-auto px-4 py-16">
    <h1 class="font-serif text-4xl text-earth font-bold mb-4 text-center">Get In Touch</h1>
    <p class="text-earth/60 text-center mb-12">
      Interested in volunteering, partnering, or learning more? We'd love to hear from you.
    </p>
    
    <form 
      action="https://formspree.io/f/YOUR_FORM_ID" 
      method="POST"
      class="space-y-6"
    >
      <div>
        <label for="name" class="block text-sm font-medium text-earth mb-2">Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          required
          class="w-full px-4 py-3 rounded-lg border border-creek-200 bg-white focus:outline-none focus:ring-2 focus:ring-creek-400 focus:border-transparent"
        />
      </div>
      
      <div>
        <label for="email" class="block text-sm font-medium text-earth mb-2">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required
          class="w-full px-4 py-3 rounded-lg border border-creek-200 bg-white focus:outline-none focus:ring-2 focus:ring-creek-400 focus:border-transparent"
        />
      </div>
      
      <div>
        <label for="interest" class="block text-sm font-medium text-earth mb-2">I'm interested in...</label>
        <select 
          id="interest" 
          name="interest"
          class="w-full px-4 py-3 rounded-lg border border-creek-200 bg-white focus:outline-none focus:ring-2 focus:ring-creek-400 focus:border-transparent"
        >
          <option value="">Select an option</option>
          <option value="volunteer">Volunteering</option>
          <option value="donate">Donating</option>
          <option value="partner">Partnership opportunities</option>
          <option value="updates">Receiving updates</option>
          <option value="other">Other</option>
        </select>
      </div>
      
      <div>
        <label for="message" class="block text-sm font-medium text-earth mb-2">Message</label>
        <textarea 
          id="message" 
          name="message" 
          rows="5"
          class="w-full px-4 py-3 rounded-lg border border-creek-200 bg-white focus:outline-none focus:ring-2 focus:ring-creek-400 focus:border-transparent"
        ></textarea>
      </div>
      
      <button 
        type="submit"
        class="w-full px-6 py-3 bg-creek-600 text-white font-medium rounded-lg hover:bg-creek-500 transition-colors"
      >
        Send Message
      </button>
    </form>
    
    <div class="mt-12 text-center text-earth/50 text-sm">
      <p>Durham, North Carolina</p>
    </div>
  </div>
</BaseLayout>
